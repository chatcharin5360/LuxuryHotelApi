generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model booking {
  Booking_id     Int                    @id @default(autoincrement())
  Check_in_date  DateTime
  Check_out_date DateTime
  Total_price    Float
  Booking_status booking_Booking_status @default(PENDING)
  User_id        Int

  @@index([User_id], map: "Booking_User_id_fkey")
}

model bookingonroom {
  BookingOnRoom_id Int @id @default(autoincrement())
  Booking_id       Int
  Room_id          Int
  Quantity_room    Int

  @@index([Booking_id], map: "BookingOnRoom_Booking_id_fkey")
  @@index([Room_id], map: "BookingOnRoom_Room_id_fkey")
}

model payment {
  Payment_id     Int      @id @default(autoincrement())
  Booking_id     Int      @unique(map: "Payment_Booking_id_key")
  Amount         Float
  Payment_method String
  Payment_status String
  Payment_date   DateTime
}

model room {
  Room_id         Int     @id @default(autoincrement())
  Hotel_id        Int
  Room_type       String
  Picture_id      String?
  Description     String?
  Price_per_night Float
}

model user {
  User_id   Int        @id @default(autoincrement())
  FirstName String
  LastName  String
  Email     String     @unique(map: "User_Email_key")
  Phone     String?
  Role      user_Role? @default(USER)
  Password  String?
  clerk_id  String     @unique(map: "User_clerk_id_key")
}

enum booking_Booking_status {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

enum user_Role {
  USER
  ADMIN
}
